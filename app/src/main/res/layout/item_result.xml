<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_height"
        android:layout_margin="@dimen/half_material_margin"
        android:orientation="horizontal">
    <ImageView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:layout_marginStart="@dimen/half_material_margin"
        android:layout_marginLeft="@dimen/half_material_margin"
        android:id="@+id/image"
        android:layout_weight="1"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_marginLeft="@dimen/half_material_margin"
        android:layout_marginStart="@dimen/half_material_margin"
        android:id="@+id/text"
        android:textSize="@dimen/title_text_size"
        android:textColor="@android:color/black"
        android:alpha=".67"
        android:fontFamily="sans-serif-light"
        android:maxLines="3"
        android:layout_weight="1"/>
    <CheckBox
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight=".2"
        android:layout_marginLeft="@dimen/half_material_margin"
        android:layout_marginStart="@dimen/half_material_margin"
        android:layout_marginRight="@dimen/half_material_margin"
        android:layout_marginEnd="@dimen/half_material_margin"
        android:layout_gravity="center_vertical"
        android:id="@+id/checkbox"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginEnd="@dimen/material_margin"
        android:layout_marginRight="@dimen/material_margin"
        android:layout_marginBottom="2dp"
        android:background="@android:color/black"
        android:alpha=".1"/>
</LinearLayout>
